{
  "name": "hdg-chatbot",
  "version": "",
  "scripts": {
    "migrate:up": "migrate-mongo up",
    "migrate:down": "migrate-mongo down",
    "build": "tsc",
    "build:production": "npm run prestart && npm prune --production",
    "watch": "tsc --w",
    "prestart": "npm run build && func extensions install",
    "start:host": "func start",
    "start": "npm-run-all --parallel start:host watch",
    "test": "echo \"No tests yet...\"",
    "prengrok-host": "npm run build",
    "ngrok-host": "func host start --port 8080",
    "ngrok": "ngrok http 8080",
    "lint": "eslint --fix --ext .js,.ts,.tsx .",
    "secrets": "npm run secrets:logout && cross-env-shell BW_SESSION=`bw login product@bitsofgood.org --raw` \"npm run secrets:sync\"",
    "secrets:logout": "(bw logout || exit 0)",
    "secrets:login": "bw login product@bitsofgood.org",
    "secrets:sync": "bw sync && bw get item ac10744b-f716-43a8-a167-acc8000710f6 | fx .notes > \".env\""
  },
  "description": "",
  "devDependencies": {
    "@azure/functions": "^1.0.1-beta1",
    "@bitwarden/cli": "^1.14.0",
    "@types/qs": "^6.9.5",
    "@types/twilio": "^2.11.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "fx": "^20.0.2",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "migrate-mongo": "^8.1.4",
    "ngrok": "^3.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "typescript": "^3.3.3"
  },
  "dependencies": {
    "azure-functions-core-tools": "^3.0.3233",
    "dotenv": "^8.2.0",
    "login": "^0.8.0",
    "mongoose": "^5.11.15",
    "qs": "^6.9.6",
    "twilio": "^3.55.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
